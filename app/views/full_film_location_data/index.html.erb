        <td><%= full_film_location_datum.actor2 %></td>
        <td><%= full_film_location_datum.actor3 %></td>
        <td><%= link_to 'Show', full_film_location_datum %></td>
        <td><%= link_to 'Edit', edit_full_film_location_datum_path(full_film_location_datum) %></td>
        <td><%= link_to 'Destroy', full_film_location_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
