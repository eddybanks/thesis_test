  <tbody>
    <% @full_film_location_data.each do |full_film_location_datum| %>
      <tr>
        <td><%= full_film_location_datum.title %></td>
        <td><%= full_film_location_datum.release_year %></td>
        <td><%= full_film_location_datum.locations %></td>
        <td><%= full_film_location_datum.fun_facts %></td>
