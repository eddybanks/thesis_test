<p id="notice"><%= notice %></p>

<h1>Film Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @film_companies.each do |film_company| %>
      <tr>
        <td><%= film_company.name %></td>
        <td><%= film_company.type %></td>
        <td><%= link_to 'Show', film_company %></td>
        <td><%= link_to 'Edit', edit_film_company_path(film_company) %></td>
        <td><%= link_to 'Destroy', film_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

